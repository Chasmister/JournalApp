@page "/journal"
@using JournalAppNeww.Models
@using JournalAppNeww.Services
@inject DatabaseService DatabaseService
@inject IJSRuntime JSRuntime

<div class="journal-entry-page">
    <div class="entry-header">
        <h2>@selectedDate.ToString("MMMM dd, yyyy")</h2>
        <input type="date" class="date-picker" value="@selectedDate.ToString("yyyy-MM-dd")"
               @onchange="OnDateChanged" />
    </div>

    <div class="entry-form">
        <!-- Mood and Tag Sections (Now at the top) -->
        <div class="top-sections">
            <!-- Mood Selection (Collapsible) -->
            <div class="mood-section collapsible">
                <button class="section-toggle-btn" @onclick="ToggleMoodSection">
                    <span class="toggle-icon">@(isMoodSectionOpen ? "▼" : "▶")</span>
                    <span>How are you feeling?</span>
                    <span style="color: red; margin-left: 5px;">*</span>
                    @if (!string.IsNullOrEmpty(currentEntry.PrimaryMood) && !isMoodSectionOpen)
                    {
                        <span class="selected-mood-preview">@GetMoodEmoji(currentEntry.PrimaryMood)</span>
                    }
                </button>

                @if (isMoodSectionOpen)
                {
                    <div class="mood-content">
                        <div class="mood-primary">
                            <label>Primary Mood:</label>
                            <div class="mood-options">
                                @foreach (var mood in availableMoods)
                                {
                                    <div class="mood-item @(currentEntry.PrimaryMood == mood.Name ? "selected" : "")"
                                         @onclick="() => SelectPrimaryMood(mood.Name)">
                                        <span class="mood-emoji">@mood.Emoji</span>
                                        <span class="mood-name">@mood.Name</span>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="mood-secondary">
                            <label>Secondary Moods (optional, max 2):</label>
                            <div class="mood-options">
                                @foreach (var mood in availableMoods)
                                {
                                    <div class="mood-item secondary @(IsSecondaryMoodSelected(mood.Name) ? "selected" : "")"
                                         @onclick="() => ToggleSecondaryMood(mood.Name)">
                                        <span class="mood-emoji">@mood.Emoji</span>
                                        <span class="mood-name">@mood.Name</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Tag Selection (Collapsible) -->
            <div class="tag-section collapsible">
                <button class="section-toggle-btn" @onclick="ToggleTagSection">
                    <span class="toggle-icon">@(isTagSectionOpen ? "▼" : "▶")</span>
                    <span>Tags</span>
                    @if (selectedTagIds.Any() && !isTagSectionOpen)
                    {
                        <span class="tag-count-badge">@selectedTagIds.Count</span>
                    }
                </button>

                @if (isTagSectionOpen)
                {
                    <div class="tag-content">
                        <div class="tag-input-container">
                            <input type="text" class="tag-input" placeholder="Add new tag..."
                                   @bind="newTagName" @bind:event="oninput"
                                   @onkeypress="HandleTagKeyPress" />
                            <button class="btn btn-secondary" @onclick="CreateNewTag" disabled="@string.IsNullOrWhiteSpace(newTagName)">
                                Add Tag
                            </button>
                        </div>

                        @if (availableTags.Any())
                        {
                            <div class="tag-selection">
                                <label>Select Tags:</label>
                                <div class="tag-list">
                                    @foreach (var tag in availableTags)
                                    {
                                        <div class="tag-item @(IsTagSelected(tag.Id) ? "selected" : "")"
                                             style="border-color: @tag.Color"
                                             @onclick="() => ToggleTag(tag.Id)">
                                            <span class="tag-name">@tag.Name</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        @if (selectedTagIds.Any())
                        {
                            <div class="selected-tags-display">
                                <label>Selected Tags:</label>
                                <div class="selected-tags">
                                    @foreach (var tagId in selectedTagIds)
                                    {
                                        var tag = availableTags.FirstOrDefault(t => t.Id == tagId);
                                        if (tag != null)
                                        {
                                            <span class="tag-badge" style="background-color: @tag.Color">
                                                @tag.Name
                                                <span class="tag-remove" @onclick="() => ToggleTag(tagId)">×</span>
                                            </span>
                                        }
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Title and Editor Section -->
        <div class="editor-section">
            <input type="text" class="entry-title" placeholder="Entry Title"
                   @bind="currentEntry.Title" @bind:event="oninput" />

            <div class="editor-container">
                <div id="quill-editor" style="height: 400px;"></div>
            </div>
        </div>

        <div class="entry-actions">
            <button class="btn btn-primary" @onclick="SaveEntry" disabled="@(!CanSave())">Save Entry</button>
            @if (currentEntry.Id != 0)
            {
                <button class="btn btn-danger" @onclick="DeleteEntry">Delete Entry</button>
            }
        </div>

        @if (!string.IsNullOrEmpty(statusMessage))
        {
            <div class="status-message @statusClass">
                @statusMessage
            </div>
        }
    </div>

    <div class="entry-metadata" style="margin-top: 20px; color: #666; font-size: 14px;">
        @if (currentEntry.Id != 0)
        {
            <p>Created: @currentEntry.CreatedAt.ToString("g")</p>
            <p>Last Updated: @currentEntry.UpdatedAt.ToString("g")</p>
            <p>Word Count: @currentEntry.WordCount</p>
        }
    </div>
</div>

@code {
    [Parameter]
[SupplyParameterFromQuery(Name = "date")]
public string? DateParam { get; set; }
    private JournalEntry currentEntry = new JournalEntry();
    private DateTime selectedDate = DateTime.Today;
    private string statusMessage = string.Empty;
    private string statusClass = string.Empty;
    private List<string> selectedSecondaryMoods = new List<string>();

    // Collapsible section states
    private bool isMoodSectionOpen = true;
    private bool isTagSectionOpen = false;

    // Tags
    private List<Tag> availableTags = new List<Tag>();
    private List<int> selectedTagIds = new List<int>();
    private string newTagName = string.Empty;

    private List<MoodOption> availableMoods = new List<MoodOption>
    {
        new MoodOption { Name = "Happy", Emoji = "😊", Color = "#FFD700" },
        new MoodOption { Name = "Sad", Emoji = "😢", Color = "#4682B4" },
        new MoodOption { Name = "Angry", Emoji = "😠", Color = "#DC143C" },
        new MoodOption { Name = "Anxious", Emoji = "😰", Color = "#FF6347" },
        new MoodOption { Name = "Calm", Emoji = "😌", Color = "#87CEEB" },
        new MoodOption { Name = "Excited", Emoji = "🤩", Color = "#FF69B4" },
        new MoodOption { Name = "Tired", Emoji = "😴", Color = "#9370DB" },
        new MoodOption { Name = "Grateful", Emoji = "🙏", Color = "#32CD32" },
        new MoodOption { Name = "Stressed", Emoji = "😫", Color = "#FF4500" },
        new MoodOption { Name = "Confused", Emoji = "😕", Color = "#DAA520" }
    };

    private static readonly List<string> TagColors = new List<string>
    {
        "#007bff", "#28a745", "#dc3545", "#ffc107", "#17a2b8",
        "#6f42c1", "#e83e8c", "#fd7e14", "#20c997", "#6610f2"
    };

    protected override async Task OnAfterRenderAsync(bool firstRender)
{
    if (firstRender)
    {
        await JSRuntime.InvokeVoidAsync("initQuill");
        
        // Check if date parameter was provided
        if (!string.IsNullOrEmpty(DateParam) && DateTime.TryParse(DateParam, out DateTime paramDate))
        {
            selectedDate = paramDate;
        }
        
        await LoadTags();
        await LoadEntryForDate(selectedDate);
    }
}

    private async Task LoadTags()
    {
        availableTags = await DatabaseService.GetAllTagsAsync();
        StateHasChanged();
    }

    private async Task OnDateChanged(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value?.ToString(), out DateTime newDate))
        {
            selectedDate = newDate;
            await LoadEntryForDate(selectedDate);
        }
    }

    private async Task LoadEntryForDate(DateTime date)
    {
        var existingEntry = await DatabaseService.GetEntryByDateAsync(date);

        if (existingEntry != null)
        {
            currentEntry = existingEntry;
            await JSRuntime.InvokeVoidAsync("setQuillContent", currentEntry.Content);

            // Load secondary moods
            if (!string.IsNullOrEmpty(currentEntry.SecondaryMoods))
            {
                selectedSecondaryMoods = currentEntry.SecondaryMoods.Split(',').ToList();
            }
            else
            {
                selectedSecondaryMoods = new List<string>();
            }

            // Load tags for this entry
            var tags = await DatabaseService.GetTagsForEntryAsync(currentEntry.Id);
            selectedTagIds = tags.Select(t => t.Id).ToList();
        }
        else
        {
            currentEntry = new JournalEntry { Date = date };
            await JSRuntime.InvokeVoidAsync("setQuillContent", "");
            selectedSecondaryMoods = new List<string>();
            selectedTagIds = new List<int>();
        }

        StateHasChanged();
    }

    private void ToggleMoodSection()
    {
        isMoodSectionOpen = !isMoodSectionOpen;
    }

    private void ToggleTagSection()
    {
        isTagSectionOpen = !isTagSectionOpen;
    }

    private void SelectPrimaryMood(string mood)
    {
        currentEntry.PrimaryMood = mood;
        StateHasChanged();
    }

    private string GetMoodEmoji(string moodName)
    {
        var mood = availableMoods.FirstOrDefault(m => m.Name == moodName);
        return mood?.Emoji ?? "";
    }

    private void ToggleSecondaryMood(string mood)
    {
        if (mood == currentEntry.PrimaryMood)
        {
            statusMessage = "Cannot select the same mood as primary and secondary.";
            statusClass = "error";
            StateHasChanged();
            return;
        }

        if (selectedSecondaryMoods.Contains(mood))
        {
            selectedSecondaryMoods.Remove(mood);
        }
        else
        {
            if (selectedSecondaryMoods.Count >= 2)
            {
                statusMessage = "You can only select up to 2 secondary moods.";
                statusClass = "error";
                StateHasChanged();
                return;
            }
            selectedSecondaryMoods.Add(mood);
        }

        currentEntry.SecondaryMoods = string.Join(",", selectedSecondaryMoods);
        statusMessage = string.Empty;
        StateHasChanged();
    }

    private bool IsSecondaryMoodSelected(string mood)
    {
        return selectedSecondaryMoods.Contains(mood);
    }

    // Tag methods
    private async Task HandleTagKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(newTagName))
        {
            await CreateNewTag();
        }
    }

    private async Task CreateNewTag()
    {
        if (string.IsNullOrWhiteSpace(newTagName))
            return;

        // Check if tag already exists
        var existingTag = await DatabaseService.GetTagByNameAsync(newTagName.Trim());
        if (existingTag != null)
        {
            statusMessage = "Tag already exists!";
            statusClass = "error";
            newTagName = string.Empty;
            StateHasChanged();
            return;
        }

        var newTag = new Tag
        {
            Name = newTagName.Trim(),
            Color = TagColors[availableTags.Count % TagColors.Count]
        };

        await DatabaseService.SaveTagAsync(newTag);
        await LoadTags();

        newTagName = string.Empty;
        statusMessage = "Tag created successfully!";
        statusClass = "success";
        StateHasChanged();
    }

    private void ToggleTag(int tagId)
    {
        if (selectedTagIds.Contains(tagId))
        {
            selectedTagIds.Remove(tagId);
        }
        else
        {
            selectedTagIds.Add(tagId);
        }
        StateHasChanged();
    }

    private bool IsTagSelected(int tagId)
    {
        return selectedTagIds.Contains(tagId);
    }

    private bool CanSave()
    {
        return !string.IsNullOrWhiteSpace(currentEntry.PrimaryMood);
    }

    private async Task SaveEntry()
    {
        if (!CanSave())
        {
            statusMessage = "Please select a primary mood before saving.";
            statusClass = "error";
            StateHasChanged();
            return;
        }

        try
        {
            var content = await JSRuntime.InvokeAsync<string>("getQuillContent");
            var textContent = await JSRuntime.InvokeAsync<string>("getQuillText");

            currentEntry.Content = content;
            currentEntry.Date = selectedDate;
            currentEntry.WordCount = CountWords(textContent);
            currentEntry.SecondaryMoods = string.Join(",", selectedSecondaryMoods);

            await DatabaseService.SaveEntryAsync(currentEntry);

            // Save tags
            await DatabaseService.ClearTagsForEntryAsync(currentEntry.Id);
            foreach (var tagId in selectedTagIds)
            {
                await DatabaseService.AddTagToEntryAsync(currentEntry.Id, tagId);
            }

            statusMessage = "Entry saved successfully!";
            statusClass = "success";

            await LoadEntryForDate(selectedDate);
        }
        catch (Exception ex)
        {
            statusMessage = $"Error saving entry: {ex.Message}";
            statusClass = "error";
        }

        StateHasChanged();
    }

    private async Task DeleteEntry()
    {
        if (currentEntry.Id == 0)
            return;

        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this entry?");

        if (confirmed)
        {
            try
            {
                await DatabaseService.DeleteEntryAsync(currentEntry);
                statusMessage = "Entry deleted successfully!";
                statusClass = "success";
                await LoadEntryForDate(selectedDate);
            }
            catch (Exception ex)
            {
                statusMessage = $"Error deleting entry: {ex.Message}";
                statusClass = "error";
            }
        }
    }

    private int CountWords(string text)
    {
        if (string.IsNullOrWhiteSpace(text))
            return 0;

        return text.Split(new[] { ' ', '\n', '\r', '\t' }, StringSplitOptions.RemoveEmptyEntries).Length;
    }
}