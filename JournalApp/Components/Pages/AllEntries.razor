@page "/entries"
@using JournalApp.Models
@using JournalApp.Shared

<h3>Journal Entries</h3>

@if (!Entries.Any())
{
    <p>No journal entries yet.</p>
}
else
{
    <ul class="list-group">
        @foreach (var entry in Entries.OrderByDescending(e => e.EntryDate))
        {
            <li class="list-group-item">
                <a href="/view/@entry.EntryDate.ToString("yyyy-MM-dd")">
                    <strong>@entry.EntryDate.ToString("MMMM dd, yyyy")</strong>
                    <br />
                    @entry.Title
                </a>
            </li>
        }
    </ul>
}

@code {
    // Same static list
    private static List<JournalEntry> Entries = Storage.Entries;
}
